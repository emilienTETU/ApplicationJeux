<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_game_list"
    android:elevation="2dp"
    android:layout_marginTop="1dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="1dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rvNameAnnonce"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Annonce"
        android:textSize="15sp"
        android:textColor="@color/text_black"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/rvNbAnnonce"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/rvNbAnnonce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x0"
        android:textSize="15sp"
        android:textColor="@color/text_gray_light"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rvNameAnnonce"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>